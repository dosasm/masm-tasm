// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": [
				"$tsc",
				"$gulp-tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "npm: compile",
			"detail": "gulp && webpack --mode production --vscode-nls && tsc -p ./tools/js-dos"
		},
		{
			"type": "npm",
			"script": "compile-dev",
			"group": "build",
			"problemMatcher": [
				"$tsc",
				"$gulp-tsc"
			],
			"label": "npm: compile-dev",
			"detail": "gulp && webpack --mode development --vscode-nls && tsc -p ./tools/js-dos"
		},
		{
			"type": "npm",
			"script": "compile-tsc",
			"problemMatcher": [
				"$tsc"
			],
			"label": "npm: compile-tsc",
			"detail": "tsc -p src/ && tsc -p ./tools/js-dos",
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"label": "npm: watch",
			"detail": "tsc -watch -p src/"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "npm: lint",
			"detail": "eslint src --ext ts"
		},
		{
			"type": "gulp",
			"task": "clean",
			"problemMatcher": [],
			"label": "gulp: clean"
		}
	]
}
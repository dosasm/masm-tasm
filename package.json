{
	"name": "masm-tasm",
	"displayName": "MASM/TASM: Run and Debug",
	"publisher": "xsro",
	"description": "Run and Debug MASM/TASM code in DOS emulator with right click in the editor. All tools packaged in the extension, Just install and right click!!",
	"version": "0.0.7",
	"keywords":["dosbox","汇编","微机","tasm","masm"],
	"icon":"cat.png",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*.ASM",
		"workspaceContains:*.asm",
		"onCommand:masm-tasm.cleanalldiagnose"
	],
	
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"when": "resourceExtname == .ASM || resourceExtname == .asm && editorFocus",
					"command": "masm-tasm.opendosbox",
					"group": "0_MASM-TASM@1"
				},
				{
					"when": "resourceExtname == .ASM || resourceExtname == .asm && editorFocus",
					"command": "masm-tasm.runASM",
					"group": "0_MASM-TASM@2"
				},
				{
					"when": "resourceExtname == .ASM || resourceExtname == .asm && editorFocus",
					"command": "masm-tasm.debugASM",
					"group": "0_MASM-TASM@3"
				}
			]
		},
		"commands": [
			{
				"command":"masm-tasm.opendosbox",
				"title":"打开dosbox并配置环境(挂载)"
			},
			{
				"command":"masm-tasm.runASM",
				"title":"运行当前程序(汇编+链接+运行)"
			},
			{
				"command":"masm-tasm.debugASM",
				"title":"调试当前程序(汇编+链接+调试)"
			},
			{
				"command":"masm-tasm.cleanalldiagnose",
				"title":"清除MASM/TASM的所有问题信息"
			}
		],
		"configuration" :{
            "type": "object",
            "title": "MASM-TASM:run assembly in DOS emulator",
            "properties": {
                "masmtasm.ASM.toolspath": {
                    "type": "string",
					"description": "你使用的汇编工具集地址，不填将使用自带的工具，如E:\\GitRepo\\masm-tasm\\tools"
				},
				"masmtasm.ASM.MASMorTASM": {
					"type": "string",
					"default": "MASM",
					"description":"使用MASM还是TASM作为汇编工具",
					"enum": ["TASM", "MASM"],
					"enumDescriptions": [
					"使用MASM汇编工具集，包括masm.exe,link.exe,debug.exe...",
					"使用TASM汇编工具集，包括tasm.exe,tlink.exe,td.exe..."
 			   ]
				},
				"masmtasm.emu.emulator": {
                    "type": "string",
                    "default": "auto",
					"description": "选择使用的16位环境模拟器，dosbox位于dosbox文件夹下，msdos player位于work文件夹",
					"enum":["dosbox","msdos player","auto"],
					"enumDescriptions":[
						"全部使用dosbox模拟16位系统环境,不支持问题输出",
						"尽量使用msdos player在终端中模拟，td除外",
						"自动选择（推荐）：使用msdos-player汇编链接，使用dosbox运行，TD调试时用dosbox，debug时用masm"
					]
				},
				"masmtasm.emu.savefirst": {
                    "type": "boolean",
                    "default": true,
                    "description": "在运行之前先保存文件,不保存的话，无法体现当前变更，注意这会保存所有文件"
				},
				"masmtasm.dosbox.run": {
					"type": "string",
					"default": "pause then exit after run",
					"description":"选择在dosbox中运行的方式",
					"enum": ["keep(do nothing)", "exit after run","pause then exit after run"],
					"enumDescriptions": [
					"运行之后在dosbox窗口停留，可以输入exit，点击x，或者Ctrl+F9关闭程序",
					"运行程序之后自动关闭",
					"运行程序之后先停顿一下 输入任意字符后关闭窗口"
 			   ]
                },
				"masmtasm.dosbox.CustomResolution": {
					"type": "string",
					"default": "1024x640",
                    "description": "自定义dosbox窗口大小，格式如1024x640"
				}
            }
		},
		"problemMatchers": [
			{
                "owner": "MASM",
                "fileLocation":"autoDetect",
                "pattern": [
                  {
					"regexp":"^\\s*(.*)\\((\\d+)\\):\\s+(error|warning)\\s+([A-Z]\\d+:\\s+.*)$",
					"file":1,
                    "line": 2,
                    "severity": 3,
                    "message": 4,
                    "loop": true
                  }
                ]
			  },
			  {
                "owner": "TASM",
                "fileLocation":"autoDetect",
                "pattern": [
                  {
                    "regexp":"^\\s*\\*+(Error|Warning)\\*+\\s+(.*)\\((\\d+)\\)\\s+(.*)$",
                    "line": 3,
                    "severity": 1,
					"message": 4,
					"file":2,
                    "loop": true
                  }
                ]
              }

		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xsro/masm-tasm"
	},
	"bugs": {
		"url": "https://github.com/xsro/masm-tasm/issues"
	},
	"license": "MIT"
}
